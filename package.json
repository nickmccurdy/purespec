{
  "name": "purespec",
  "description": "A declarative test framework for pure JavaScript.",
  "version": "0.0.0",
  "main": "src",
  "bin": "src/cli.js",
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "upload-coverage": "coveralls < coverage/lcov.info"
  },
  "eslintConfig": {
    "plugins": [
      "fp",
      "lodash-fp"
    ],
    "extends": [
      "standard",
      "plugin:fp/recommended",
      "plugin:lodash-fp/recommended"
    ],
    "rules": {
      "fp/no-class": 0,
      "fp/no-mutation": [
        2,
        {
          "commonjs": true,
          "allowThis": true
        }
      ],
      "fp/no-rest-parameters": 0,
      "fp/no-this": 0
    }
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js"
    ]
  },
  "repository": "nickmccurdy/purespec",
  "author": "Nick McCurdy <nick@nickmccurdy.com> (http://nickmccurdy.com/)",
  "license": "ISC",
  "bugs": "https://github.com/nickmccurdy/purespec/issues",
  "homepage": "https://github.com/nickmccurdy/purespec#readme",
  "dependencies": {
    "chalk": "^2.3.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.0.4"
  },
  "engines": {
    "node": ">=6"
  }
}
