{
  "name": "purespec",
  "description": "A declarative test framework for pure JavaScript.",
  "version": "0.0.0",
  "main": "src",
  "watch": {
    "test": {
      "patterns": ["example.js", "src", "test"],
      "quiet": true
    }
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "nyc mocha",
    "upload-coverage": "nyc report --reporter text-lcov | coveralls",
    "watch": "npm-watch"
  },
  "repository": "nickmccurdy/purespec",
  "author": "Nick McCurdy <thenickperson@gmail.com> (http://nickmccurdy.com/)",
  "license": "ISC",
  "bugs": "https://github.com/nickmccurdy/purespec/issues",
  "homepage": "https://github.com/nickmccurdy/purespec#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "deep-equal": "^1.0.1"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "eslint": "^3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.7",
    "nyc": "^10.0.0",
    "sinon": "^1.17.7"
  },
  "engines": {
    "node": ">=4"
  }
}
