{
  "name": "purespec",
  "description": "A declarative test framework for pure JavaScript.",
  "version": "0.0.0",
  "main": "src",
  "bin": "src/cli.js",
  "scripts": {
    "eslint": "eslint .",
    "jest": "jest",
    "purespec": "purespec examples/round.js examples/purespec.js",
    "test": "npm-run-all eslint typescript jest purespec",
    "typescript": "tsc",
    "upload-coverage": "coveralls < coverage/lcov.info"
  },
  "eslintConfig": {
    "plugins": [
      "filenames"
    ],
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "rules": {
      "filenames/match-exported": 2
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "repository": "nickmccurdy/purespec",
  "author": "Nick McCurdy <nick@nickmccurdy.com> (http://nickmccurdy.com/)",
  "license": "ISC",
  "bugs": "https://github.com/nickmccurdy/purespec/issues",
  "homepage": "https://github.com/nickmccurdy/purespec#readme",
  "dependencies": {
    "chalk": "2.1.0",
    "deep-equal": "^1.0.1",
    "import-cwd": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-filenames": "^1.2.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.6.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.0.6",
    "npm-run-all": "^4.1.2",
    "typescript": "^2.6.2"
  },
  "engines": {
    "node": ">=6"
  }
}
