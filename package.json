{
  "name": "purespec",
  "description": "A declarative test framework for pure JavaScript.",
  "version": "0.0.0",
  "main": "src",
  "bin": "src/cli.js",
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "upload-coverage": "coveralls < coverage/lcov.info",
    "watch": "nodemon --exec npm test"
  },
  "eslintConfig": {
    "plugins": [
      "filenames",
      "fp",
      "lodash-fp"
    ],
    "extends": [
      "standard",
      "plugin:fp/recommended",
      "plugin:lodash-fp/recommended"
    ],
    "rules": {
      "filenames/match-exported": 2,
      "fp/no-class": 0,
      "fp/no-mutation": [
        2,
        {
          "commonjs": true,
          "allowThis": true
        }
      ],
      "fp/no-nil": 0,
      "fp/no-rest-parameters": 0,
      "fp/no-this": 0,
      "fp/no-unused-expression": 0
    }
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "repository": "nickmccurdy/purespec",
  "author": "Nick McCurdy <nick@nickmccurdy.com> (http://nickmccurdy.com/)",
  "license": "ISC",
  "bugs": "https://github.com/nickmccurdy/purespec/issues",
  "homepage": "https://github.com/nickmccurdy/purespec#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "coveralls": "^2.11.16",
    "eslint": "^3.16.1",
    "eslint-config-standard": "^7.0.0",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0"
  },
  "engines": {
    "node": ">=6"
  }
}
