{
  "name": "purespec",
  "description": "A declarative test framework for pure JavaScript.",
  "version": "0.0.0",
  "main": "src",
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "upload-coverage": "coveralls < coverage/lcov.info",
    "watch": "nodemon --exec npm test"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "jest": {
    "collectCoverage": true,
    "setupFiles": [
      "./__tests__/helper.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "__tests__/helper.js"
    ],
    "verbose": true
  },
  "repository": "nickmccurdy/purespec",
  "author": "Nick McCurdy <thenickperson@gmail.com> (http://nickmccurdy.com/)",
  "license": "ISC",
  "bugs": "https://github.com/nickmccurdy/purespec/issues",
  "homepage": "https://github.com/nickmccurdy/purespec#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "deep-equal": "^1.0.1"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "eslint": "^3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "^18.1.0",
    "nodemon": "^1.11.0"
  },
  "engines": {
    "node": ">=6"
  }
}
